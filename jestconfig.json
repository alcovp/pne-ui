{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "moduleNameMapper": {
        "^@cloudscape-design/components/theming$": "<rootDir>/__mocks__/cloudscape-theming.mock.ts",
        "^@cloudscape-design/board-components/board$": "<rootDir>/__mocks__/cloudscape-board.mock.tsx",
        "^@cloudscape-design/board-components/board-item$": "<rootDir>/__mocks__/cloudscape-board-item.mock.tsx"
    },
    "testEnvironment": "jsdom"
}
